<div class="menu-items">
  <% @category.ancestors.each do |category| %>
    <%= link_to category.name, category_path(category) %>
    (<%= category.id %>)
    |
  <% end %>
    <strong><%= @category.name %> </strong>
</div>

<div class="menu-items">
  <%= arranged_tree_as_list(@category.children.arrange) do |category| %>
    <%= link_to category_path(category), class: 'btn btn-primary' do %>
      <%= category.name %>
      <%= category.id %>
    <% end %>
  <% end %>

</div>

<div>
  <%= @products.inspect %>
</div>
