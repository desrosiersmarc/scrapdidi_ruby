<div class="well">
  <div class="row">
    <div class="col-xs-8">
        <h4><%= product.name %></h4>

    </div>
    <div class="col-xs-4">
        <h4 class="text-right">
          Unit Price:
            <span style="color: green">
              <%= number_to_currency order_item.unit_price/100.00 %>
            </span>
        </h4>
        <div class="row">
          <div class="col-xs-8 text-right">
            <div class="btn-group up_down">
              <%= simple_form_for order_item, remote: true do |f| %>
                <%= f.hidden_field :quantity, value: order_item.quantity-1 %>
                <%= f.submit "-", class: "btn btn-alert" %>
              <% end %>
              <%= order_item.quantity %>
              <%= simple_form_for order_item, remote: true do |f| %>
                <%= f.hidden_field :quantity, value: order_item.quantity+1 %>
                <%= f.submit "+", class: "btn btn-alert" %>
              <% end %>

              <%= link_to order_item_path(order_item), method: :delete, remote: :true, data:{confirm: "Etes vous sur de vouloir supprimer #{product.name}"} do %>
                <i class="fa fa-trash" aria-hidden="true"></i>
              <% end %>
            </div>
          </div>
        </div>
        <h4 class="text-right">
          Total Price:
            <span style="color: green">
              <%= number_to_currency order_item.total_price/100.00 %>
            </span>
        </h4>
    </div>
  </div>
</div>
